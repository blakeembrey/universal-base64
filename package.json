{
  "name": "universal-base64",
  "version": "2.1.0",
  "description": "Small universal base64 functions for node.js and browsers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "browser": "dist/browser.js",
  "scripts": {
    "prettier": "prettier --write",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "format": "npm run prettier -- README.md \"src/**/*.{js,ts}\"",
    "build": "rimraf dist && tsc",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs && npm run -s size",
    "prepare": "npm run build",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "./dist/browser.js",
      "limit": "200 B"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/blakeembrey/universal-base64.git"
  },
  "keywords": [
    "base64",
    "atob",
    "bota",
    "universal",
    "node",
    "browser"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/blakeembrey/universal-base64/issues"
  },
  "homepage": "https://github.com/blakeembrey/universal-base64",
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "npm run prettier",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "browserify": "^16.2.3",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.2",
    "size-limit": "^1.3.5",
    "ts-jest": "^24.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.1"
  }
}
